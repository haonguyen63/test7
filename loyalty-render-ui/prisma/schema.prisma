
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  phone    String @unique
  password String
  role     String
}

model Customer {
  id     Int    @id @default(autoincrement())
  phone  String @unique
  name   String
  points Int    @default(0)
}
